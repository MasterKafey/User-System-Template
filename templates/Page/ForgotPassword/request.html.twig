{% extends 'Layout/FrontOffice/base.html.twig' %}

{% block body %}
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white">Réinitialisation de mot de
            passe</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        {% if submitted %}
            <div class="text-green-400 flex justify-center">
                Un email a été envoyé à votre email
            </div>
        {% endif %}
        <div>
            <div class="flex items-center justify-between">
                <label for="password"
                       class="block text-sm font-medium leading-6 text-white">Email</label>
            </div>
            <div class="mt-2">
                {{ form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-primary sm:text-sm sm:leading-6'}}) }}
            </div>
        </div>

        <div>
            <button type="submit"
                    class="flex w-full justify-center rounded-md bg-primary px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">
                Valider la demande
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock body %}